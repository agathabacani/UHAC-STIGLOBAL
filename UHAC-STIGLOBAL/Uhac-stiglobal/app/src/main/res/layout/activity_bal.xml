<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacechristian.uhac_stiglobal.BalActivity">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/balance"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="UB Balance:" />

        <TextView
            android:id="@+id/ubtxt"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:textSize="30sp"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="23dp" />

        <TextView
            android:id="@+id/ugotxt"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:textSize="30sp"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="31dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_height="50dp"
            android:layout_width="200dp"
            android:textSize="30sp"
            android:layout_marginTop="27dp"
            android:text="uGo Balance:"
            android:layout_below="@+id/ubtxt"
            android:layout_alignStart="@+id/ubtxt" />


    </RelativeLayout>
</FrameLayout>